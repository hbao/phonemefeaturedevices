<!-- System-independent JSR 229 properties required by the specification -->
<configuration>
  <properties>
    <!-- SYSTEM PROPERTIES -->

    <!-- Visible via System.getProperty() -->

    <property Key="microedition.payment.version"
      Value="1.1"
      Scope="system"
      Comment="The version of the Payment API implemented in the device."/>

    <property Key="Pay-Version"
      Value="1.1"
      Scope="system"
      Comment="Dummy string. Need to pass TCK1.1.0 Version4Test test only"/>

    <property Key="payment.mcc"
      Value="999"
      Scope="system"
      Comment="Mobile Country Code. The MCC is a 3-digit code identifying the country."/>

    <property Key="payment.mnc"
      Value="99"
      Scope="system"
      Comment="Mobile Network Code. The MNC is a 2 or 3-digit code identifying the network of a given country."/>

    <!-- Visible via Configuration.getProperty() -->
    
    <property Key="microedition.payment.paymentmodule"
      Value="com.sun.j2me.payment.CldcPaymentModule"
      Scope="internal"
      Comment="Default Payment ModuleMMS Service Center address."/>

    <property Key="payment.transactions.limit"
      Value="16"
      Scope="internal"
      Comment="The maximum number of passed transactions."/>      

  </properties>
</configuration>
